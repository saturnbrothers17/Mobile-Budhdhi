<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/background_color">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_mic"
        android:layout_marginBottom="32dp"
        android:contentDescription="Mobile Budhdhi Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Budhdhi"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advanced Voice Mobile Controller"
        android:textSize="16sp"
        android:textColor="@color/secondary_text_color"
        android:layout_marginBottom="48dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initializing..."
        android:textSize="18sp"
        android:textColor="@color/primary_text_color"
        android:textAlignment="center"
        android:padding="16dp"
        android:background="@drawable/status_background"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/permissionsButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Grant Permissions"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_background"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/accessibilityButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Enable Accessibility Service"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_background"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Start Mobile Budhdhi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/primary_button_background"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Say 'Budhdhi' to activate voice commands"
        android:textSize="14sp"
        android:textColor="@color/secondary_text_color"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:padding="16dp" />

</LinearLayout>